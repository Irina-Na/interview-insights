FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

COPY requirements-insights.txt .
RUN pip install --no-cache-dir -r requirements-insights.txt

COPY . .

EXPOSE 8501

CMD ["streamlit", "run", "interview_insider/app_insights.py", "--server.port=8501", "--server.address=0.0.0.0", "--server.maxUploadSize=2048"]
